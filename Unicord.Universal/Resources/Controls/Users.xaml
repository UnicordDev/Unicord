    <Style TargetType="local:AvatarControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AvatarControl">
                    <Ellipse x:Name="ImageEllipse"
                             Width="{TemplateBinding Width}"
                             Height="{TemplateBinding Height}">
                        <Ellipse.Fill>
                            <ImageBrush>
                                <ImageBrush.ImageSource>
                                    <BitmapImage UriSource="{Binding Source, RelativeSource={RelativeSource TemplatedParent}}" 
                                                 DecodePixelWidth="{TemplateBinding Width}"
                                                 DecodePixelType="Logical"/>
                                </ImageBrush.ImageSource>
                            </ImageBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SmallAvatarWithPresenceStyle" TargetType="local:AvatarControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AvatarControl">
                    <Viewbox Stretch="Uniform" 
                             Width="{TemplateBinding Width}"
                             Height="{TemplateBinding Height}">
                        <Canvas Width="32"
                                Height="32">
                            <Path x:Name="ImagePath"
                                  Width="32"
                                  Height="32"
                                  StrokeThickness="0"
                                  Data="{StaticResource AvatarGeometrySmall}">
                                <Path.Fill>
                                    <ImageBrush>
                                        <ImageBrush.ImageSource>
                                            <BitmapImage UriSource="{Binding Source, RelativeSource={RelativeSource TemplatedParent}}" 
                                                         DecodePixelWidth="{TemplateBinding Width}"
                                                         DecodePixelType="Logical"/>
                                        </ImageBrush.ImageSource>
                                    </ImageBrush>
                                </Path.Fill>
                            </Path>

                            <Ellipse x:Name="PresenceEllipse"
                                     Width="10"
                                     Height="10"
                                     Canvas.Left="20"
                                     Canvas.Top="20">
                                <Ellipse.Fill>
                                    <SolidColorBrush Color="{Binding Presence, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PresenceColourConverter}}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

